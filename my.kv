#: import ListItemButton kivy.uix.listview.ListItemButton
#: import ListAdapter kivy.adapters.listadapter.ListAdapter

WindowManager:
    MainScreen:
    NewsFeed:

<MainScreen>:
    name1 : name1
    pswd : pswd
    name: "main"
    canvas.before:
        Color:
            rgba: 1, .3, .3, .5
        Rectangle:
            size: self.size
            pos: self.pos
    GridLayout:
        cols:1
        Label:
            text:"The Office Manager App"
        GridLayout:
			size_hint: None, None
			size: 600, 400
			canvas.before:
				Color:
					rgba: .1, .1, .1, .8
				Rectangle:
					size: self.size
					pos: self.pos
            cols:2
            Label:
                text: "User Name:"
            TextInput:
                id:name1
                multiline: False
            Label:
                text: "password"

            TextInput:
                id: pswd
                multiline: False
                password: True
                
        Label:
            text: "Welcome to OMA. OMA is a powerful office managemnet tool that enables you to carry out your office duties with less interruption. OMA provides you with a rich interface that can enable you to hold your meetings online, manage office documents and keep up-to-date track of the company activities with in a remote area. OMA is a software developed by the MUBOSOFT corp for use in both multi-national and companies with in the same nationality. OMA can enable you to meet all the branch heads at ago online. The data from one branch can easily be reflected in another at ago. OMA alleviates the challenge of remote location making it one of the best applications for companies with branches"
            text_size: self.width, None
        Button:
            text: "Submit"
            on_press:
                app.root.current= "news"
                root.manager.transition.direction= "left"
            size_hint: None, None
            size: 100, 25
            center_y: root.center_y
        Button:
            text: "State"
            on_press: root.btnscp()
            size_hint: None, None
            size: 100, 25
        Label:
            text: "OMA is owned by the MUBOSOFT companies and was made to provide Companies with a new modern technology to enhace their productivity and efficiency. Any attempt to copy in the source code of this application is fully illegal and therefore punishable by the law. \n Mubosoft is by itself, its own company, We produce customised and special applications for our customers. you can email us on this@gmail.com. We shall gladly respond"
            text_size: self.width, None

<NewsFeed>:
    name: "news"
    id: newsfeed
    canvas.before:
        Color:
            rgba: .1, .1, .1, 1
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        id: bxLyt2
        GridLayout:
            cols:1
            BoxLayout:
                size_hint_y: None
                height: '35dp'
                Button:
                    text: "Online Conference"
                Button:
                    text: "Secretary and Office"
                Button:
                    text: "Administrator"
                Button:
                    text: "Setting"
            Camera:
                id: my_camera
                resolution: (self.width, self. height)
            Button:
                text: 'Back to home'
                on_press:
                    app.root.current = "main"
                    root.manager.transition.direction = "right"

                size_hint: None, None
                width: self.width
                height: '35dp'


        BoxLayout:
            id: BxLyt
            BoxLayout:
                orientation: 'vertical'
                firstname : firstname
                secondname : secondname
                
                padding : 10
                spacing : 10
                Button:
                    id: state
                    text: 'State Button'
                    size_hint_y: None
                    height: '40dp'
                    background_color: .3,1,1,1
                    disabled: True

                GridLayout:
                    cols: 2
                    size_hint_y: None
                    height: "60dp"

                    Label:
                        text: "First Name"
                        
                    TextInput:
                        id: firstname
                        multiline: False
                    Label:
                        text: "Surname"
                        height: "40dp"
                    TextInput:
                        id: secondname
                        multiline: False
                GridLayout:
                    cols: 3
                    size_hint_y: None
                    height: '40dp'

                    Button:
                        text: "Add"
                        size_hint_y: None
                        height: "35dp"
                        on_press: root.add_member(firstname.text, secondname.text)
                        background_color: 1,0,0,1
                    Button:
                        text: "Replace"
                        size_hint_y: None
                        height: "35dp"
                        on_press: root.replace_member()
                        background_color: 1,0,0,1
                    Button:
                        text: "Delete"
                        size_hint_y: None
                        height: "35dp"
                        on_press: root.remove_member()
                        background_color: 1,0,0,1
                ListView:
                    id: member_name
                    adapter: 
                        ListAdapter(data=['Doug Smith'], cls=ListItemButton)
                GridLayout:
                    cols: 1
                    id: calc
                    Button:
                        text: "Name Of Meeting"
                        background_color: 1, .5, .5, .5
                        disabled: True
                    TextInput:
                        id:meeting_name
                        multiline: False
                    Button:
                        text: "Calculator"
                        background_color: 1, .5, .5, .5
                        disabled: True
                    TextInput:
                        id: mycal_input
                        multiline: False
                    BoxLayout:
                        Button:
                            text: "1"
                            on_press:
                                mycal_input.text = mycal_input.text + '1'
                        Button:
                            text: '2'
                            on_press:
                                mycal_input.text = mycal_input.text + '2'
                        Button:
                            text: '3'
                            on_press:
                                mycal_input.text = mycal_input.text + '3'
                        Button:
                            text:'/'
                            on_press:
                                mycal_input.text = mycal_input.text + '/'
                    BoxLayout:
                        Button:
                            text: '4'
                            on_press:
                                mycal_input.text = mycal_input.text + '4'
                        Button:
                            text: '5'
                            on_press:
                                mycal_input.text = mycal_input.text + '5'
                        Button:
                            text: '6'
                            on_press:
                                mycal_input.text = mycal_input.text + '6'
                        Button:
                            text: 'X'
                            on_press:
                                mycal_input.text = mycal_input.text + '*'
                    BoxLayout:
                        Button:
                            text: '7'
                            on_press:
                                mycal_input.text = mycal_input.text + '7'
                        Button:
                            text: '8'
                            on_press:
                                mycal_input.text = mycal_input.text + '8'
                        Button:
                            text: '9'
                            on_press:
                                mycal_input.text = mycal_input.text + '9'
                        Button:
                            text: '-'
                            on_press:
                                mycal_input.text = mycal_input.text + ' - '
                    BoxLayout:
                        Button:
                            text: 'AC'
                            on_press:
                                mycal_input.text = ''
                        Button:
                            text: '0'
                            on_press:
                                mycal_input.text = mycal_input.text + '0'
                        Button:
                            text: '+'
                            on_press:
                                mycal_input.text = mycal_input.text + ' + '
                        Button:
                            text: '='
                            on_press:
                                root.cal_addition(mycal_input.text)

            BoxLayout:
                orientation: 'vertical'
                GridLayout:
                    cols:1
                    Button:
                        text: 'Current Time'
                        size_hint_y: None
                        height: '35dp'
                        background_color: 1, .5, .5, .5
                        disabled: True
                    Label:
                        id: timerX
                        text: '00.00.00'
                        size_hint_y:None
                        height: '60dp'
                        font_size: 60
                        markup: True
                        on_parent: root.on_start()
                    TextInput:
                        id: minute_text
                    Button:
                        text: 'Save Meeting Minute'
                        size_hint_y: None
                        height: '35dp'
                        on_press:
                            root. save_minutes()

                TextInput:
                    id: broadcast_mesage
                    size_hint_y: None
                    height: '80dp'
                Button:
                    text: "Broadcast Message"
                    size_hint_y: None
                    height:'30dp'
                GridLayout:
                    cols: 1
                    Button:
                        text: "Manage Documents"
                        background_color: 1, .5, .5, .5
                        size_hint_y: None
                        height: '35dp'
                        disabled: True
                    Button:
                        text: "Upload document"
                        size_hint_y: None
                        height: '35dp'
                        on_press: root.btnX()

                    Button:
                        text: "Open Dic via List"
                        size_hint_y: None
                        height: '35dp'

                    Button:
                        text: "View Selected Document"
                        size_hint_y: None
                        height: '35dp'
                        background_color: 1, .5, .5, .5
                    ListView:
                        id: list_of_docs
                        adapter:
                            ListAdapter(data=['Doctor meeting'], cls=ListItemButton)
                Button:
                    text: "Manage Media"
                    size_hint_y: None
                    height: '30dp'

                Button:
                    text: "Hand Up"
                    size_hint_y: None
                    height: '30dp'

<file_selector>:
    orientation: 'vertical'
    BoxLayout:
        size_hint_y: None
        height: sp(52)
        Button:
            text: 'Icon View'
            on_press: fc.view_mode = 'icon'
        Button:
            text: 'List View'
            on_press: fc.view_mode = 'list'
    FileChooser:
        id: fc
        FileChooserIconLayout
        FileChooserListLayout
